{
  "name": "my-contracts",
  "version": "0.1.0",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/artifacts/ts/index.d.ts",
      "default": "./dist/artifacts/ts/index.js"
    },
    "./deployments": {
      "types": "./dist/artifacts/ts/deployments.d.ts",
      "default": "./dist/artifacts/ts/deployments.js"
    }
  },
  "types": "dist/artifacts/ts/index.d.ts",
  "scripts": {
    "build": "npm run clean && npx --yes tsc --build .",
    "clean": "npm run clean:windows && npm run clean:unix",
    "clean:unix": "node -e \"if (process.platform !== 'win32') process.exit(1)\" || rm -rf dist",
    "clean:windows": "node -e \"if (process.platform === 'win32') process.exit(1)\" || , if exist dist rmdir /Q /S dist",
    "compile": "npx cli compile",
    "deploy": "npx cli deploy",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --fix --ext ts",
    "test": "jest -i --config ./jest-config.json"
  },
  "dependencies": {
    "@alephium/web3": "v2.0.0-rc.1"
  },
  "devDependencies": {
    "@alephium/cli": "^2.0.0-rc.1",
    "@alephium/web3-test": "^2.0.0-rc.1",
    "@alephium/web3-wallet": "^2.0.0-rc.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "trailingComma": "none"
  }
}
